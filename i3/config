# the only good mod key, the windows key
set $mod Mod4

### colors ###
# based on the digerati color scheme
# sauce: http://hcalves.deviantart.com/art/Digerati-Vim-Colorscheme-100471798

set $color-black          #000000
set $color-gray           #303030
set $color-light-gray     #5f5f5f
set $color-red            #c03000
set $color-pink           #ff3a78
set $color-green          #b1d631
set $color-dark-green     #a6cd07
set $color-yellow         #fecf35
set $color-light-yellow   #b5c865
set $color-blue           #426870
set $color-light-blue     #4a7781
set $color-purple         #6d506d
set $color-cyan           #4bb5c1
set $color-white          #E2E2E5

# set variables
set $title-font Fira Mono 0

# font used for window titles
font pango:$title-font
# use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

### programs ###

## bindings
# start a terminal
bindsym $mod+Return exec termite

# start authentication manager for updates
exec --no-startup-id /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1

### monitor management ###

exec_always xrandr | grep -q HDMI1 && xrandr --output eDP1 --auto --output HDMI1 --auto --left-of eDP1

### window management ###

## window focus
# change focus with keys
bindsym $mod+j focus left
bindsym $mod+k focus down
bindsym $mod+l focus up
bindsym $mod+semicolon focus right

# alternatively, you can use the cursor keys:
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# kill focused window
bindsym $mod+Shift+q kill

## scratchpads
# convert to scratchpad
bindsym $mod+Shift+z move scratchpad
# show scratchpad
bindsym $mod+z scratchpad show

## window shifting
# move focused window
bindsym $mod+Shift+j move left
bindsym $mod+Shift+k move down
bindsym $mod+Shift+l move up
bindsym $mod+Shift+semicolon move right
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

## orientation
# split in horizontal orientation
bindsym $mod+h split h
# split in vertical orientation
bindsym $mod+v split v

## fullscreen
# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

## layouts
# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

## floating windows
# toggle tiling / floating
bindsym $mod+Shift+space floating toggle
# change focus between tiling / floating windows
bindsym $mod+alt focus mode_toggle

## workspaces
# set workspace name variables
set $workspace1 1:[  code ]
set $workspace2 2:[  preview ]
set $workspace3 3:[  browse ]
set $workspace4 4:[  work ]
set $workspace5 5:[  comms ]
set $workspace6 6:[  noise ]
set $workspace7 7:[  sys ]
set $workspace8 8:[  play ]
set $workspace9 9:[  steam ]
# the ones below are intentionally left empty for later use
set $workspace0 10

# switch to workspace
bindsym $mod+1 exec "i3-msg workspace $workspace1; i3-msg scratchpad show"
bindsym $mod+2 exec "i3-msg workspace $workspace2; i3-msg scratchpad show"
bindsym $mod+3 exec "i3-msg workspace $workspace3; i3-msg scratchpad show"
bindsym $mod+4 exec "i3-msg workspace $workspace4; i3-msg scratchpad show"
bindsym $mod+5 exec "i3-msg workspace $workspace5; i3-msg scratchpad show"
bindsym $mod+6 exec "i3-msg workspace $workspace6; i3-msg scratchpad show"
bindsym $mod+7 exec "i3-msg workspace $workspace7; i3-msg scratchpad show"
bindsym $mod+8 exec "i3-msg workspace $workspace8; i3-msg scratchpad show"
bindsym $mod+9 exec "i3-msg workspace $workspace9; i3-msg scratchpad show"
bindsym $mod+0 exec "i3-msg workspace $workspace0; i3-msg scratchpad show"

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $workspace1
bindsym $mod+Shift+2 move container to workspace $workspace2
bindsym $mod+Shift+3 move container to workspace $workspace3
bindsym $mod+Shift+4 move container to workspace $workspace4
bindsym $mod+Shift+5 move container to workspace $workspace5
bindsym $mod+Shift+6 move container to workspace $workspace6
bindsym $mod+Shift+7 move container to workspace $workspace7
bindsym $mod+Shift+8 move container to workspace $workspace8
bindsym $mod+Shift+9 move container to workspace $workspace9
bindsym $mod+Shift+0 move container to workspace $workspace0

workspace_auto_back_and_forth yes

## force location
# workspace1
assign [class="Atom"] → $workspace1

# workspace3 [browsing]
# assign [class="Google-chrome"] → $workspace3
# workspace4 [work]
# assign [class="Google-chrome"] → $workspace4

# workspace5 [comms]
assign [class="discord"] → $workspace5
assign [class="discord-canary"] → $workspace5

# workspace6 [music]
for_window [class="Spotify"] move to workspace $workspace6
assign [class="deadbeef"] → $workspace6
assign [class="Blockify"] → $workspace6

# workspace9 [steam]
assign [class="Steam"] → $workspace9

## force floating
for_window [class="cinnamon-settings.py"] floating enable

## autostart
# double buffering with smooth transitions
exec_always compton -f
# start rofi
bindsym $mod+d exec rofi -show run
# start dunst
exec_always dunst
exec discord-canary
exec google-chrome-stable
exec spotify
exec blockify-ui
exec atom
exec nm-applet
## force floating
for_window [class="Blockify"] floating enable
for_window [class="deadbeef"] floating enable

### core functions ###
# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym j resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym l resize shrink height 10 px or 10 ppt
        bindsym semicolon resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

### styling ###

# window colors
#                       border                background         text                 indicator
client.focused          $color-green          $color-green       $color-green         $color-green
client.unfocused        $color-gray           $color-gray        $color-white         $color-red
client.focused_inactive $color-light-gray     $color-light-gray  $color-white         $color-light-gray
client.urgent           $color-red            $color-red         $color-yellow        $color-red

# spacing
gaps inner 10
gaps outer 0

# border
new_window pixel 1

## status bar
exec_always --no-startup-id $HOME/.config/polybar/launch.sh

# lock screen with custom lock script
bindsym $mod+shift+x exec ~/.config/i3/scripts/lock.sh

### keybinding controls ###

## audio controls
# (used for pulseaudio)
# increase sound volume
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume $(pactl list short sinks|grep RUNNING|awk '{print $1}') +5%
#decrease sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume $(pactl list short sinks|grep RUNNING|awk '{print $1}') -5%
# mute sound
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 0 toggle

## screen brightness controls
bindsym XF86MonBrightnessUp exec xbacklight -inc 20 # increase screen brightness
bindsym XF86MonBrightnessDown exec xbacklight -dec 20 # decrease screen brightness

bindsym $mod+shift+u exec setxkbmap -layout us && xmodmap -e 'keycode 117=Right'
bindsym $mod+shift+i exec setxkbmap -layout us -variant intl && xmodmap -e 'keycode 117=Right'

## touchpad controls
bindsym XF86TouchpadToggle exec /some/path/toggletouchpad.sh # toggle touchpad
# set tap to click
exec_always xinput --set-prop --type=int --format=8  "Elan Touchpad" "libinput Tapping Enabled" 1
# set natural scrolling
exec_always xinput --set-prop --type=int --format=8  "Elan Touchpad" "libinput Natural Scrolling Enabled" 1

# set hack for my current laptop - some keys on it don't work
exec_always xmodmap -e 'keycode 117=Right'

## media player controls
bindsym XF86AudioPause exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

## background
exec_always feh --bg-fill /home/taco/Pictures/wallpapers/636ZiMH.jpg
exec --no-startup-id i3-msg 'workspace $workspace3; exec /usr/bin/google-chrome'
