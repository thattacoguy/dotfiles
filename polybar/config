;; top navigation bar
[bar/top]
  pin-workspaces = true
  width = 100%
  height = 30
  radius = 0.0
  fixed-center = true
  top = true
  background = ${colors.background}
  foreground = ${colors.foreground}

  tray-position = right
  tray-padding = 8

  ; line
  line-size = 2
  border-size = 0

  ; padding
