;;; right-aligned

[module/date]
type = internal/date
interval = 5

date = "%A, %d %b %Y"

time = %l:%M:%S %p

format-prefix = " "
format-prefix-foregound = ${colors.foreground}
format-underline = ${colors.color-green}
format-underline-size = 5
label = "%date% | %time%"

[module/volume]
type = internal/volume

format-volume = <label-volume> <bar-volume>
label-volume = ""
label-volume-foreground = ${root.foreground}

format-muted-prefix = " "
format-muted-foreground = ${colors.color-red}
label-muted = muted

bar-volume-width = 20
bar-volume-foreground-0 = ${colors.color-green}
bar-volume-gradient = false
bar-volume-indicator = 	█
bar-volume-indicator-foreground = ${colors.color-green}
bar-volume-indicator-font = 2
bar-volume-fill = ■
bar-volume-fill-font = 2
bar-volume-empty = ■
bar-volume-empty-font = 2
bar-volume-empty-foreground = ${colors.foreground}

[module/battery]
type = internal/battery

full-at = 99

battery = BAT0
adapter = AC0

poll-interval = 1

time-format = %H:%M:%S

format-charging = <label-charging> <animation-charging>
format-charging-foreground = ${colors.color-green}
format-discharging = <label-discharging> <ramp-capacity>
format-discharging-foreground = ${colors.color-yellow}
format-full = <label-full> <ramp-capacity>
format-full-foreground = ${colors.color-green}

label-charging = Charging - %percentage%% [%time%]

label-discharging = Discharging - %percentage%% [%time%]

label-full = Fully charged - %percentage%%

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 

bar-capacity-width = 10

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
animation-charging-framerate = 500

[module/powermenu]
type = custom/menu

label-open = 
label-close = 
label-separator = |
label-separator-margin = 1

menu-0-0 = Terminate WM
menu-0-0-foreground = ${colors.color-green}
menu-0-0-exec = i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'
menu-0-1 = Reboot
menu-0-1-foreground = ${colors.color-red}
menu-0-1-exec = menu-open-1
menu-0-2 = Power off
menu-0-2-foreground = ${colors.color-red}
menu-0-2-exec = menu-open-2
menu-0-3 = Lock
menu-0-3-foreground = ${colors.color-yellow}
menu-0-3-exec = ~/.config/i3/scripts/lock.sh

menu-1-0 = Cancel
menu-1-0-foreground = ${colors.foreground}
menu-1-0-exec = menu-open-0
menu-1-1 = Reboot
menu-1-1-foreground = ${colors.color-red}
menu-1-1-exec = reboot

menu-2-0 = Power off
menu-2-0-foreground = ${colors.color-red}
menu-2-0-exec = shutdown now
menu-2-1 = Cancel
menu-2-1-foreground = ${colors.foreground}
menu-2-1-exec = menu-open-0

