;; center

[module/title]
  type = internal/xwindow
  label = %title%
  label-maxlen = 100
  label-active-font = 1

;; right

[module/date]
  type = internal/date
  interval = 1

  date = "%d %b %Y"

  time = "%l:%M:%S %p"

  format-prefix = "ÔÄó "
  format-prefix-foregound = ${colors.foreground}
  label = "%date% | %time%"

[module/volume]
  type = internal/alsa

  format-volume = <label-volume> <bar-volume>
